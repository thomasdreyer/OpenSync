{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist/apps",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["apps/src/**/*.ts"]
}
